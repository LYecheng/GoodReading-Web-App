<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/books/#{@book.id}", :method => 'patch' do %>

  <p>
    <%= label_tag 'Name: ' %>
    <%= text_field_tag :name, value = @book.name, size: 50 %>
  </p>

  <p>
    <%= label_tag 'ISBN: ' %>
    <%= text_field_tag :isbn, value = @book.isbn %>
  </p>

  <p>
    <%= label_tag 'Year: ' %>
    <%= text_field_tag :year, value = @book.year, size: 4 %>
  </p>

  <p>
    <%= label_tag 'Rating: ' %>
    <%= select_tag 'rating', options_for_select([1, 2, 3, 4, 5], @book.rating) %>
  </p>

  <p>
    <%= label_tag 'category_id' %>
   <%= select_tag 'category_id', options_from_collection_for_select(@category, "id", "name", @category_id) %>
  </p>

  <p>
    <%= label_tag 'author_id' %>
    <%= select_tag 'author_id', options_from_collection_for_select(@authors, "id", "name", @author_id) %>
  </p>

  <p>
    <%= label_tag 'Image: ' %>
    <%= text_field_tag :image, value = @book.image, size: 100 %>
  </p>

  <p>
    <%= label_tag 'Description: ' %>
    <%= text_area_tag :description, value = @book.description, rows: 5, cols: 70 %>
  </p>

  <%= submit_tag 'Update' %>

<% end %>