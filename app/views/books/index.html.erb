
<div style="clear: both;"></div>
 
<%= form_tag books_url, :method => 'get' do %>

  <%= text_field_tag :keyword %>
  <%= submit_tag "Search" %>

<% end %>

<p><%= link_to 'Add A New Book', '/books/new' %></p>

<%= paginate @books  %>

<table class="table table-striped">

  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Category</th>
    <th>Author</th>
    <th>ISBN</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.name, book_url(book.id) %></td>
    <td><%= book.year %></td>
    <td><%= Category.find_by(id: book.category_id).name %></td> 
    <td><%= Author.find_by(id: book.author_id).name %></td>
    <td><%= book.isbn %></td>
    <td><%= link_to 'Edit', "/books/#{book.id}/edit" %></td>
    <td><%= link_to 'Delete', "/books/#{book.id}", :method => 'delete' %></td>
  </tr>
  <% end %>

</table>

