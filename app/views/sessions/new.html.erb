<style>
  .recover{
    color: blue;
    font-size: 20px;
  }
</style>

<h3>Sign In</h3>

<%= form_tag '/sessions' do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag 'Enter' %>

<% end %>

<p class="recover">
  <%= link_to 'Forgot password?', '/users/reset_password' %>
</p>