<style>
  .errors{
    color: red;
    font-size: 15px;
    font-weight: bold;
  }
</style>

<h3>Sign Up</h3>
<% if @user.errors.any? %>
  <ul class='errors'>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag '/users' do %>
  <p>
    <%= label_tag :username, 'User Name:' %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  </p>
  <%= submit_tag 'Sign Up!' %>
<% end %>